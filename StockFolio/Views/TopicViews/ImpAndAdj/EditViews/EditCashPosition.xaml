            <TextBlock Grid.Row="1" Grid.Column="0" Text="変更前" Margin="{StaticResource CellMargin}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <TextBlock Grid.Row="2" Grid.Column="0" Text="変更内容" Margin="{StaticResource CellMargin}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <TextBlock Grid.Row="3" Grid.Column="0" Text="変更後" Margin="{StaticResource CellMargin}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <!--項目-->
            <TextBlock Grid.Row="1" Grid.Column="1" Text="" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="{StaticResource TxtMargin}" MinWidth="70"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Text="" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <!--追加入出金-->
            <TextBlock Grid.Row="1" Grid.Column="2" Text="" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
            <TextBox Grid.Row="2" Grid.Column="2" Text="" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="{StaticResource TxtMargin}" MinWidth="70" HorizontalContentAlignment="Right"/>
