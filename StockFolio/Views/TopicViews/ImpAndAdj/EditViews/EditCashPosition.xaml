            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Background="#19838383" />
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6"  Background="#19838383"/>
            <!--Column line-->
